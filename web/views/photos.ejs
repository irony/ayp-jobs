  <header ng-show="loading && loadingReverse" class="loader pull-left">
      <span></span>
      <span></span>
      <span></span>
  </header>


  <div id="photos" class="photos" >
    <div id="wall" ng-controller="PhotosController">

      
        <div when-scrolled="scroll()" ng-cloak>
            <div  ng-repeat="photo in photos" class="photo {{photo.class}} pull-left" title="{{photo.path}}" ng-controller="PhotoController">
              <a ng-click="hide(photo, group)"><i class="icon-remove"></i></a>
              <a ng-click="star(photo)"><i class="{{starClass(photo)}}"></i></a>
              <a href="/share?date={{photo.taken.split('T')[0]}}"><i class="icon-share"></i></a>
              <a>{{photo.class}}</a>
              <!--
              <video controls ng-cloak ng-show="photo.mimeType.split('/')[0] == 'video'" ng-click="click(photo)" rightClick="rightclick(photo)" ng-dblclick="dblclick(photo)" ng-mousemove="view(photo)">
                <source src="{{photo.src}}" type="{{photo.mimeType}}">
              </video>
              -->
              <img ng-src="{{photo.src}}" width="{{300 * photo.ratio}}" ng-cloak ng-show="photo.mimeType.split('/')[0] == 'image'" ng-click="click(photo)" rightClick="rightclick(photo)" ng-dblclick="dblclick(photo)" ng-mousemove="view(photo)">
            </div>
          <div class="slider">
              <label class="pull-right  muted">All your photos</label>
              <label class="pull-left  muted">Only the best</label>
              <label class="pull-center muted">{{nrPhotos}} photos</label>

              <input type="range" ng-model="zoomLevel" id="zoomLevel" max="10" step="1">
          </div>

          <div class="group" ng-show="loading">
            <header class="loader">
                <span></span>
                <span></span>
                <span></span>
            </header>
          </div>

        </div>
        <div class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="navbar-inner">
          <ul class="nav">
            <li ng-repeat="group in groups" data-date="{{group.photo.taken}}"><a href="#{{group.id}}"><img ng-src="{{group.photo.src}}"></a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>



    <script type="text/javascript" src="/controllers/photos.js"></script>
    <script type="text/javascript" src="/controllers/photo.js"></script>
<!--    <script src="/js/zoom.js"></script>-->

    <script>
      var zoomTimeout;

      document.querySelector( '#wall' ).addEventListener( 'click', function( event ) {
        if (event.target.tagName == "IMG") {
          var target = event.target;

          clearTimeout(zoomTimeout);
          zoomTimeout = setTimeout(function(){
            if (target) zoom.to({ element: target });
          }, 200);
        }
      } );

      document.querySelector( '#wall' ).addEventListener( 'dblclick', function( event ) {
          clearTimeout(zoomTimeout);
      } );

